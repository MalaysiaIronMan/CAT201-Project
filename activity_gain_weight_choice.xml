<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GainWeightChoice">

    <Button
        android:id="@+id/increase4"
        android:layout_width="302dp"
        android:layout_height="50dp"
        android:text="Increase 1000 calories per day"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/increase3"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/textViewCurrent"
        android:layout_width="388dp"
        android:layout_height="49dp"
        android:hint="Current Weight"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.695"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <TextView
        android:id="@+id/textViewGain"
        android:layout_width="388dp"
        android:layout_height="49dp"
        android:hint="Target Gain Weight"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.695"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCurrent"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/textViewGain2"
        android:layout_width="380dp"
        android:layout_height="103dp"
        android:hint="Target Gain Weight"
        android:text="Please select one of the following option to achieve your target weight:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGain"
        app:layout_constraintVertical_bias="0.184" />

    <Button
        android:id="@+id/increase1"
        android:layout_width="302dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:text="Increase 200 calories per day"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGain2"
        app:layout_constraintVertical_bias="0.052" />

    <Button
        android:id="@+id/increase2"
        android:layout_width="302dp"
        android:layout_height="50dp"
        android:text="Increase 500 calories per day"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/increase1"
        app:layout_constraintVertical_bias="0.099" />

    <Button
        android:id="@+id/increase3"
        android:layout_width="302dp"
        android:layout_height="50dp"
        android:text="Increase 700 calories per day"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/increase2"
        app:layout_constraintVertical_bias="0.155" />
</androidx.constraintlayout.widget.ConstraintLayout>
